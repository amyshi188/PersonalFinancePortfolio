<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pmk6vc_ds2ca.personalportfoliomanager.LocationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LongitudeBox"
        android:text="Longitude"
        android:textStyle="normal|bold"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Longitude"
        android:text="0.0"
        android:textSize="20dp"
        android:textColor="#91a043"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/LongitudeBox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LatitudeBox"
        android:text="Latitude"
        android:textStyle="normal|bold"
        android:textSize="30dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Latitude"
        android:text="0.0"
        android:textColor="#91a043"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/LatitudeBox"/>

    <TextView
        android:id="@+id/NearestFinancialAdvisersBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Longitude"
        android:text="Nearest Financial Advisers:"
        android:textStyle="normal|bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/NearestFinancialAdvisersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NearestFinancialAdvisersBox"
        android:textColor="#91a043"
        android:textSize="20dp"/>
</RelativeLayout>
</ScrollView>